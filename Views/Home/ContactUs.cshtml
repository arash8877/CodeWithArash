@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Contact Us</h1>
        <p class="text-muted">We’d love to hear from you! Get in touch with us below.</p>
    </div>

    <div class="row g-4">
        <!-- Contact Info Card -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-header bg-primary text-white text-center fw-bold">
                    How to Reach Us
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-telephone-fill text-primary fs-4 me-3"></i>
                        <span>+45 2233446688</span>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-phone-fill text-success fs-4 me-3"></i>
                        <span>+45 2233446688</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-envelope-fill text-danger fs-4 me-3"></i>
                        <span>arash@site.com</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Welcome Section -->
        <div class="col-md-8">
            <div class="p-5 bg-light rounded-4 shadow-sm h-100">
                <h2 class="display-5 fw-bold mb-3">Welcome to <span class="text-primary">CodeWithArash</span></h2>
                <p class="lead">Have questions, feedback, or partnership inquiries? We’re always here to help.</p>
                <p class="text-muted">
                    Our team is committed to answering your queries promptly. Reach out by phone, email, or
                    use our contact form, and we’ll get back to you as soon as possible.
                </p>
                <a class="btn btn-primary btn-lg mt-3" href="#" role="button">
                    <i class="bi bi-chat-dots-fill me-2"></i> Learn More
                </a>
            </div>
        </div>
    </div>
</div>
