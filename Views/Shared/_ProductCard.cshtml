@model CodeWithArash.Models.Product

            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden">
                    <img src="/images/@(Model.Id).jpg" class="card-img-top" style="height: 180px; object-fit: cover;" alt="@Model.Name" />
                    
                    <div class="card-body d-flex flex-column">
                        <h6 class="fw-semibold card-title-sm">@Model.Name</h6>
                        <p class="card-text description-clamp">@Model.Description</p>
                        <a asp-action="ProductDetails"
                           asp-controller="Home"
                           asp-route-id="@Model.Id"
                           class="btn btn-primary mt-auto rounded-pill shadow-sm">
                            Product Details
                        </a>
                    </div>
                </div>
            </div>



            <style>
    .description-clamp {
        display: -webkit-box;
        -webkit-line-clamp: 3; /* show 3 lines max */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
        .card-title-sm {
        font-size: 1.2rem;
    }
</style>