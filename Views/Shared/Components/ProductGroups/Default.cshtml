@using Microsoft.AspNetCore.Http.Features
@model IEnumerable<CodeWithArash.Models.ShowGroupViewModel>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white fw-bold">
        Product Groups
    </div>
    <ul class="list-group list-group-flush">
        @foreach (var category in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a asp-controller="Product" 
                   asp-action="ShowProductByGroupId" 
                   asp-route-id="@category.GroupId" 
                   asp-route-name="@category.GroupName"
                   class="text-decoration-none text-dark fw-semibold">
                   @category.GroupName
                </a>
                <span class="badge bg-secondary rounded-pill">@category.ProductCount</span>
            </li>
        }
    </ul>
</div>

