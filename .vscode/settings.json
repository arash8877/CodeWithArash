{
  // Auto-format on save
  "editor.formatOnSave": true,

  // Prettier as default formatter for JS/JSON/HTML/CSS
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // OmniSharp as default formatter for C#
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  }
}
