@using Microsoft.EntityFrameworkCore.Infrastructure

@model IEnumerable<CodeWithArash.Models.Product> 
 @* IEnumerable<T> is an interface in C#. It represents a collection of objects that can loop through.
 IEnumerable<T> doesn’t store items itself — it just provides a way to read them.
 Lists, arrays, or any collection that can be iterated over implement IEnumerable<T>.
It’s commonly used in ASP.NET Core for passing multiple items from the controller to the view. *@




<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Welcome to CodeWithArash</h1>
        <p class="lead text-muted">Explore our courses and expand your skills in programming and development!</p>
    </div>

    <div class="row justify-content-center g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden">
                    <img src="/images/@(item.Id).jpg" class="card-img-top" style="height: 180px; object-fit: cover;" alt="@item.Name" />
                    
                    <div class="card-body d-flex flex-column">
                        <h6 class="fw-semibold card-title-sm">@item.Name</h6>
                        <p class="card-text description-clamp">@item.Description</p>
                        <a asp-action="ProductDetails"
                           asp-controller="Home"
                           asp-route-id="@item.Id"
                           class="btn btn-primary mt-auto rounded-pill shadow-sm">
                            Product Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<style>
    .description-clamp {
        display: -webkit-box;
        -webkit-line-clamp: 3; /* show 3 lines max */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
        .card-title-sm {
        font-size: 1.2rem;
    }
</style>

