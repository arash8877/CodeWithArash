@page
@model CodeWithArash.Pages.Admin.AddModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Product";
}

<div class="container p-4">
    <h1 class="fw-bold mb-4">âž• Add Product</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Product.Name" class="form-label"></label>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Product.Description" class="form-label"></label>
            <textarea asp-for="Product.Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Product.Price" class="form-label"></label>
            <input asp-for="Product.Price" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Product.QuantityInStock" class="form-label"></label>
            <input asp-for="Product.QuantityInStock" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Product.Picture" class="form-label">Picture</label>
            <input asp-for="Product.Picture" type="file" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle"></i> Save
        </button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
