@page
@model CodeWithArash.Pages.Admin.IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Products";
}
<div class="container p-4 d-flex flex-column">
  <div class="mb-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
    <h1 class="fw-bold mb-3">ðŸ“¦ Products Dashboard</h1>
    <a asp-page="Add" class="btn btn-success btn-lg mb-3">
        <i class="bi bi-plus-circle"></i> Add Product
    </a>
    <span class="text-muted">Total Products: @Model.Products.Count()</span>
</div>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        <img src="/images/@(item.Id).jpg" 
                             alt="@item.Name" 
                             class="img-thumbnail" />
                    </td>
                    <td class="fw-semibold">@item.Name</td>
                    <td class="fw-bold">@item.BasketItem.Price.ToString("C")</td>
                    <td class="d-flex gap-2 flex-wrap">
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary flex-fill">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger flex-fill" 
                           onclick="return confirm('Are you sure you want to delete this product?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>

